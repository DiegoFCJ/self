<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" minWidth="400.0" onDragDetected="#moveWindow" onDragOver="#releaseAndChangeCursor" 
      styleClass="hbox-header" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.scriptagher.frontend.controller.HeaderBarController"
      stylesheets="@../css/header.css">
    
    <Button styleClass="title-button">
        <graphic>
            <ImageView fitHeight="30" fitWidth="30">
                <image>
                    <Image url="@../icons/scriptagher-icon.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>


    <!-- Spaziatore -->
    <Region HBox.hgrow="ALWAYS" />

    <Button fx:id="dashboard" styleClass="button">
        <graphic>
            <ImageView fitHeight="20" fitWidth="20">
                <image>
                    <Image url="@../icons/icons8-dashboard-open-32.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="minimizeButton" styleClass="button">
        <graphic>
            <ImageView fitHeight="20" fitWidth="20" styleClass="head-btn">
                <image>
                    <Image url="@../icons/icons8-macos-riduci-a-icona-32.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="maximizeButton" styleClass="button">
        <graphic>
            <ImageView fitHeight="20" fitWidth="20" styleClass="head-btn">
                <image>
                    <Image url="@../icons/icons8-circle-32.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="closeButton" styleClass="button">
        <graphic>
            <ImageView fitHeight="20" fitWidth="20" styleClass="head-btn">
                <image>
                    <Image url="@../icons/icons8-spegnere-32.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
</HBox>
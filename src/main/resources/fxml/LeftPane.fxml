<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane  
    fx:id="leftPane"
    prefHeight="200.0" 
    prefWidth="200.0" 
    stylesheets="@../css/left-pane.css"
    BorderPane.alignment="CENTER"
    xmlns="http://javafx.com/javafx/23.0.1" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="com.scriptagher.frontend.controller.LeftPaneController"
>
    <children>
        <VBox 
            fx:id="menuVBox"
            prefHeight="200.0" 
            prefWidth="100.0" 
            style="-fx-border-color: #1f1f1f; -fx-border-width: 0.5px;" 
            AnchorPane.bottomAnchor="0.0" 
            AnchorPane.leftAnchor="0.0" 
            AnchorPane.rightAnchor="0.0" 
            AnchorPane.topAnchor="0.0"
        >
            <!-- I MenuButton verranno aggiunti dinamicamente dal controller -->
        </VBox>
    </children>
</AnchorPane>